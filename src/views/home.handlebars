<main class="mainHome">
  {{> user}}
  <h2>E-commerce</h2>
  
  <div class="containerCards">
    {{#each products}}
      <div class="cardContainer">
        <img
          class="imgCard"
          src={{this.thumbnail}}
          alt=""
        />

        <div class="btnContainer">
        <div class="btnCard addToCart" data-id={{this._id}}>
          <ion-icon class="icon" name="cart-outline"></ion-icon>
          <span class="iconTooltip">Agregar al carrito</span>
        </div>
        </div>
        <div class="descriptionCard">
          <h2 class="titleCard">{{this.title}}</h2>
          <div class="authorStock">
            <div class="stockCard">
              <span>Stock:</span>
              <span>{{this.stock}}</span>
               <span>Precio:</span>
              <span>{{this.price}}</span>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  {{> pagination}}
</main>
<script type="module" src="js/home.js"></script>