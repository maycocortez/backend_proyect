<main class="mainLogin">
  <div
    {{#if signup}}
      class="wrapper active"
    {{else}} 
      class="wrapper"
    {{/if}}  id="wrapper">
    <div class="title-text">
      <div class="title login">Iniciar Sesion</div>
      <div class="title signup">Registro</div>
    </div>
    <div class="form-container">
      <div class="slide-controls">
        <label for="login" id="slideLogin" class="slide login">Inicio Sesion</label>
        <label for="signup" id="slideSignup" class="slide signup">Registro</label>
        <div class="slider-tab"></div>
      </div>
      <div class="form-inner">
        <form id="formLogin" action="/api/session/login" method="post" class="login">
          <div class="field">
            <input type="text" name="email" placeholder="Email" value={{email}}>
          </div>
          <div class="field">
            <input id="passwordLogin" type="password" name="password" placeholder="Contraseña"/>
            <span class="eyeBtn" id="eyeBtn"></span>
          </div>
          <div class="field btn">
            <div class="btn-layer"></div>
            <input type="submit" value="Aceptar"/>
          </div>
          <label for="login" class="messageError">{{messageLogin}}</label>
          <label for="newUser" class="messageNewUser">{{messageNewUser}}</label>
          <div class="registerExternal">
            <span>Iniciar sesion con:</span>
            <div class="iconsRegister">
              <a class="iconRegister" href="/session/github">
                <svg viewBox="0 0 64 64" width="32px" height="32px"><path fill="#ff7f00" d="M32 6C17.641 6 6 17.641 6 32c0 12.277 8.512 22.56 19.955 25.286-.592-.141-1.179-.299-1.755-.479V50.85c0 0-.975.325-2.275.325-3.637 0-5.148-3.245-5.525-4.875-.229-.993-.827-1.934-1.469-2.509-.767-.684-1.126-.686-1.131-.92-.01-.491.658-.471.975-.471 1.625 0 2.857 1.729 3.429 2.623 1.417 2.207 2.938 2.577 3.721 2.577.975 0 1.817-.146 2.397-.426.268-1.888 1.108-3.57 2.478-4.774-6.097-1.219-10.4-4.716-10.4-10.4 0-2.928 1.175-5.619 3.133-7.792C19.333 23.641 19 22.494 19 20.625c0-1.235.086-2.751.65-4.225 0 0 3.708.026 7.205 3.338C28.469 19.268 30.196 19 32 19s3.531.268 5.145.738c3.497-3.312 7.205-3.338 7.205-3.338.567 1.474.65 2.99.65 4.225 0 2.015-.268 3.19-.432 3.697C46.466 26.475 47.6 29.124 47.6 32c0 5.684-4.303 9.181-10.4 10.4 1.628 1.43 2.6 3.513 2.6 5.85v8.557c-.576.181-1.162.338-1.755.479C49.488 54.56 58 44.277 58 32 58 17.641 46.359 6 32 6zM33.813 57.93C33.214 57.972 32.61 58 32 58 32.61 58 33.213 57.971 33.813 57.93zM37.786 57.346c-1.164.265-2.357.451-3.575.554C35.429 57.797 36.622 57.61 37.786 57.346zM32 58c-.61 0-1.214-.028-1.813-.07C30.787 57.971 31.39 58 32 58zM29.788 57.9c-1.217-.103-2.411-.289-3.574-.554C27.378 57.61 28.571 57.797 29.788 57.9z"/></svg>
              </a>
            </div>
          </div>
        </form>
        <form id="formSignup" action="/api/session/register" method="post" class="signup">
          <div class="field inputsSignup">
            <input type="text" name="firstName" placeholder="Nombre" value={{firstName}}>
            <input type="text" name="lastName" placeholder="Apellido" value={{lastName}}>
          </div>
          <div class="field inputsSignup">
            <input class="ageSignup" name="age" type="text" placeholder="Edad" value={{age}}>
            <input class="emailSignup" name="email" type="text" placeholder="Email" value={{emailRegister}}>
          </div>
          <div class="field inputsSignup">
            <input type="password" id="passwordSignup1" name="password" placeholder="Contraseña" maxlength="15"/>
            <input type="password" id="passwordSignup2" name="passwordConfirm" placeholder="Volver a escribir" maxlength="10"/> 
            <span class="eyeBtnSignup" id="eyeBtnSignup"></span>
          </div>
          <div class="field btn">
            <div class="btn-layer"></div>
            <input type="submit" value="Enviar" />
          </div>
          <label for="signup" class="messageError signupError">{{messageSignup}}</label>

        </form>
      </div>
    </div>
  </div>
</main>
<script type="module" src="js/login.js"></script>